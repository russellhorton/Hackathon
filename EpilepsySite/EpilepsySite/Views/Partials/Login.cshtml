@model EpilepsySite.Web.Models.LoginModel
@{
    Layout = null;
}

@using (Html.BeginUmbracoForm("Login", "Security", FormMethod.Post))
{   
    <p>@Model.Message</p>
    
    @Html.LabelFor(m => m.Username, "Email")
    @Html.TextBoxFor(m => m.Username, new { @class = "text", placeholder = "Email Address" })
    <br />
    @Html.LabelFor(m => m.Password, "Password")
    @Html.TextBoxFor(m => m.Password, new { @class = "text", placeholder = "Password", type = "Password" })
    <br />
    <input type="submit" value="submit" />
}